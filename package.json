{
  "name": "messaging-contracts-v1",
  "version": "1.0.0",
  "homepage": "https://concero.io",
  "repository": "https://github.com/concero/messaging-contracts-v1.git",
  "license": "UNLICENSED",
  "bugs": "security@concero.io",
  "description": "Concero V1 Contracts. If you discover any security vulnerabilities, please report them responsibly to security@concero.io. Thank you!",
  "scripts": {
    "compile": "yarn lint:sol && hardhat compile",
    "deploy": "hardhat deploy",
    "test": "REPORT_GAS=true hardhat test --network hardhat",
    "lint:ts": "echo 'not working yet'",
    "lint:sol": "solhint --config .solhint.json ./contracts/*.sol ./contracts/**/*.sol",
    "format:ts": "prettier --write ./**/*.ts",
    "format:sol": "prettier --write ./*.sol ./contracts/**/*.sol ./test/**/*.sol",
    "clean:hardhat": "rm -rf ./artifacts ./cache ./coverage ./typechain-types ./deployments",
    "clean:forge": "forge clean",
    "clean": "yarn run clean:hardhat && yarn run clean:forge"
  },
  "devDependencies": {
    "@chainlink/env-enc": "1.0.5",
    "@chainlink/functions-toolkit": "0.3.2",
    "@chainlink/hardhat-chainlink": "0.0.4",
    "@nomicfoundation/hardhat-chai-matchers": "2.0.7",
    "@nomicfoundation/hardhat-ethers": "3.0.8",
    "@nomicfoundation/hardhat-verify": "2.0.12",
    "@nomicfoundation/hardhat-viem": "2.0.6",
    "@tenderly/hardhat-tenderly": "2.5.1",
    "@typechain/hardhat": "9.1.0",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "chai": "4.5.0",
    "dotenv": "16.4.7",
    "envfile": "7.1.0",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "ethers": "6.13.4",
    "ethers-v5": "npm:ethers@5.7.2",
    "forge-std": "https://github.com/foundry-rs/forge-std.git",
    "hardhat": "2.22.17",
    "hardhat-contract-sizer": "2.10.0",
    "hardhat-deploy-ethers": "0.4.2",
    "hardhat-docgen": "1.3.0",
    "hardhat-gas-reporter": "2.2.2",
    "husky": "9.1.7",
    "prettier": "3.4.2",
    "prettier-plugin-solidity": "1.4.1",
    "readline": "1.3.0",
    "regenerator-runtime": "0.14.1",
    "solady": "0.0.287",
    "solhint": "5.0.3",
    "solhint-community": "3.7.0",
    "solhint-plugin-chainlink-solidity": "npm:@chainlink/solhint-plugin-chainlink-solidity",
    "solhint-plugin-prettier": "0.1.0",
    "@chainlink/solhint-plugin-chainlink-solidity": "1.0.1",
    "solidity-coverage": "0.8.14",
    "typechain": "8.3.2",
    "typescript": "5.7.2",
    "viem": "2.21.57",
    "@typechain/ethers-v6": "0.5.1"
  },
  "dependencies": {
    "@chainlink/contracts": "1.3.0"
  }
}
