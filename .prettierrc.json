{
    "arrowParens": "avoid",
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "semi": false,
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "printWidth": 100,
                "tabWidth": 4,
                "singleQuote": false,
                "bracketSpacing": false
            }
        },
      {
        "files": "./clf/**",
        "options": {
          "singleQuote": true,
          "semi": true
        }
      }
    ]
}
